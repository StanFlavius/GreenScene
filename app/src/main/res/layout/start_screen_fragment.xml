<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Functionalities.StartScreen.StartScreenFragment">

    <Button
        android:id="@+id/buttonTestLogin"
        android:layout_width="223dp"
        android:layout_height="62dp"
        android:layout_marginTop="300dp"
        android:text="LOGIN"
        android:textSize="30dp"
        style="@style/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <Button
        android:id="@+id/buttonTestRegister"
        android:layout_width="223dp"
        android:layout_height="62dp"
        android:layout_marginTop="71dp"
        android:text="REGISTER"
        android:textSize="30dp"
        style="@style/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTestLogin" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="151dp"
        style="@style/text"
        android:textSize="50dp"
        android:text="WELCOME TO "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginEnd="154dp"
        style="@style/text"
        android:text="GREENSCENE"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/ic_logo_mus"
        android:layout_width="133dp"
        android:layout_height="142dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="139dp"
        android:src="@mipmap/ic_logo_mus_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTestRegister" />


</androidx.constraintlayout.widget.ConstraintLayout>